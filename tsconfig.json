{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./build",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "types/index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./types/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
